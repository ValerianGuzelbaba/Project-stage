{% if flash.getMessage('info') %}
  <div class="alert alert-info">
    {{ flash.getMessage('info') | first | raw }}
  </div>
{% endif %}

{% if flash.getMessage('succès') %}
  <div class="alert alert-success">
    {{ flash.getMessage('succès') | first | raw }}
  </div>
{% endif %}

{% if flash.getMessage('error') %}
  <div class="alert alert-danger">
    {{ flash.getMessage('erreur') | first | raw }}
  </div>
{% endif %}
