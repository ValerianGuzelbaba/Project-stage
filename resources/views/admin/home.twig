{% extends 'templates/main.twig' %}

{% block content %}
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">Utilisateurs</div>

        <div class="panel-body">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>Email</th>
                <th>Nom</th>
                <th>Role</th>
                <th>Derni√®re connexion</th>
                <th width="16%">Modifier</th>
              </tr>
            </thead>

            <tbody>
              {% for user in listUsers %}
              <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.username }}</td>
                <td>{{ getUsersRole[loop.index0].slug }}</td>
                <td>{{ user.last_login }}</td>
                <td>
                  <a href="{{ path_for('admin.user.edit', { 'uid': user.username }) }}" class="btn btn-default btn-xs" title="Modifier"><span class="glyphicon glyphicon-pencil"></span></a>
                  <a href="{{ path_for('admin.user.delete', { 'uid': user.username }) }}" class="btn btn-danger btn-xs" title="Supprimer"><span class="glyphicon glyphicon-remove"></span></a>
                </td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
